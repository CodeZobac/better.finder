{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "better-finder",
  "version": "0.1.0",
  "identifier": "com.caboz.better-finder",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Global Search Launcher",
        "width": 600,
        "height": 480,
        "center": true,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "alwaysOnTop": true,
        "transparent": false,
        "visible": false,
        "skipTaskbar": true,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://releases.example.com/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "",
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Global Search Launcher",
    "copyright": "Copyright Â© 2025 Global Search Launcher",
    "category": "Utility",
    "shortDescription": "Fast global search launcher for Windows",
    "longDescription": "A powerful Windows desktop application that provides instant, system-wide search functionality accessible via Ctrl+K hotkey. Search files, applications, bookmarks, clipboard history, and more.",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "tsp": false,
      "wix": {
        "language": ["en-US"]
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "languages": ["English"],
        "displayLanguageSelector": false,
        "compression": "lzma",
        "startMenuFolder": "Global Search Launcher"
      }
    },
    "resources": [],
    "externalBin": []
  }
}
